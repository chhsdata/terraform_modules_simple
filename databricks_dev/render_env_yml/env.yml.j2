  # databricks workspace (ws) variables
  ws:
    name: "{{ prefix }}-workspace"
    deployment_name: "{{ prefix }}-workspace"
    mws_network_name: "{{ prefix }}-mws-network"
    mws_credentials_name: "{{ prefix }}-credentials"
